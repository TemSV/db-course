<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="dialogRoot" alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="db.controllers.EditGoodPopupController">
    <Label text="Edit Good" />
    <TextField fx:id="nameField" promptText="Name" />
    <TextField fx:id="priorityField" promptText="Priority" />
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="saveButton" text="Save" onAction="#save" />
        <Button fx:id="deleteButton" text="Delete Good" onAction="#delete" />
        <Button fx:id="cancelButton" text="Cancel" onAction="#cancel" />
    </HBox>
</VBox>
